<center><h1> Boletas</h1>

<table class="table table-condensed" id="contenedor">

  <thead >
    <tr>
      <th>Num. Boleta</th>
      <th>Fecha</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody  >
    <% @bolets.each do |bolet| %>
      <tr >
        <td ><%= bolet.numboleta %></td>
        <td><%= bolet.fecha %></td>
        <td ><%= bolet.cliente.nombre %></td>
        <td >
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-eye-open"  ></span>
          <%= link_to 'Mostrar', bolet %>
        </button> </td>

        <% if current_usuario.email == "miguel@gmail.com" %>
        <td>
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-pencil" ></span>
          <%= link_to 'Editar', edit_bolet_path(bolet) %>
        </button></td>
        <td >
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-trash" ></span>
          <%= link_to 'Eliminar', bolet, method: :delete, data: { confirm: 'Are you sure?' } %>
          </button></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>

</table>

<br>
<button type="button" class="btn btn-default btn-xs">
<span class="glyphicon glyphicon-plus" ></span>
<%= link_to 'Nueva Boleta', new_bolet_path %>
  </button>
