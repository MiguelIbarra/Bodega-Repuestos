<p id="notice"><%= notice %></p>

<center><h1> Clientes</h1>

<table class="table table-condensed" id="contenedor">
  <thead>
    <tr>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Direccion</th>
      <th>Correo</th>
      <th>Fono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.rut %></td>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellido %></td>
        <td><%= cliente.direccion %></td>
        <td><%= cliente.correo %></td>
        <td><%= cliente.fono %></td>
        <td>
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-eye-open"  ></span>
          <%= link_to 'Mostrar', cliente %>
        </button> </td>
        <td>
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-pencil"  ></span>
          <%= link_to 'Editar', edit_cliente_path(cliente) %>
        </button> </td>
        <% if current_usuario.email == "miguel@gmail.com" %>
        <td>
          <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-trash"  ></span>
          <%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %>
        </button></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-default btn-xs">
<span class="glyphicon glyphicon-plus" ></span>
<%= link_to 'Nuevo Cliente', new_cliente_path %>
  </button>
